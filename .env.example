# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/warehouse_db
# For SQLite (development):
# DATABASE_URL=sqlite:///./warehouse.db

# Data Generation Settings
DEFAULT_COMPANIES=100
DEFAULT_EXCHANGES=50000
START_DATE=2022-01-01
END_DATE=2024-12-31

# Analysis Settings
FIFO_BATCH_SIZE=10000
ENABLE_PARALLEL_PROCESSING=true
MAX_WORKERS=4

# External APIs (if needed for real market data)
COMMODITY_API_KEY=your_api_key_here
EXCHANGE_RATE_API_KEY=your_api_key_here

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/warehouse_system.log

# Development Settings
DEBUG=false
TESTING=false

# File Paths
DATA_OUTPUT_DIR=data/outputs
RAW_DATA_DIR=data/raw
PROCESSED_DATA_DIR=data/processed

# Performance Settings
CHUNK_SIZE=1000
MEMORY_LIMIT_MB=2048

# Workshop Settings
WORKSHOP_MODE=true
INCLUDE_BUGS=true  # Intentionally include bugs for workshop debugging
DIFFICULTY_LEVEL=intermediate  # beginner, intermediate, advanced